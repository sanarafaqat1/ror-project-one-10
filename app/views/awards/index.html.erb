<p id="notice"><%= notice %></p>

<h1>Awards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.name %></td>
        <td><%= award.category %></td>
        <td><%= award.year %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Award', new_award_path, :class => 'btn btn-warning'%>
<%= link_to 'Actor', actors_path, :class => 'btn btn-primary' %>
<%= link_to 'Academy',academies_path, :class => 'btn btn-danger'%>
